<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CB8FD8"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/przedmiotOceny"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Przemiot"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/srednia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/przedmiot"
            android:text="Åšrednia"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/liczba_list"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/przedmiot"
            android:text="Liczba list"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingLeft="8dp"/>

    </LinearLayout>


</LinearLayout>